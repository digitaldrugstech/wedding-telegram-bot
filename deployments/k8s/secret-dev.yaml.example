apiVersion: v1
kind: Secret
metadata:
  name: wedding-telegram-bot-secret
  namespace: dev-backend-services
  labels:
    app: wedding-telegram-bot
    environment: dev
type: Opaque
stringData:
  # ⚠️ NEVER commit real secrets to git!
  # Copy this file to secret-dev.yaml and fill with real values
  # secret-dev.yaml is in .gitignore

  # Development Bot Token (from @BotFather)
  TELEGRAM_BOT_TOKEN: "your_dev_bot_token_here"

  # PostgreSQL connection string (dev database)
  # Format: postgresql://user:password@host:port/database
  DATABASE_URL: "postgresql://wedding_bot_dev:CHANGE_ME@postgres:5432/wedding_bot_dev"
