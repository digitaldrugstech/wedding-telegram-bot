apiVersion: v1
kind: Secret
metadata:
  name: wedding-telegram-bot-secret
  namespace: dev-backend-services
type: Opaque
stringData:
  # ⚠️ NEVER commit real secrets to git!
  # Copy this file to secret-prod.yaml and fill with real values
  # secret-prod.yaml is in .gitignore

  # Get from @BotFather in Telegram
  TELEGRAM_BOT_TOKEN: "your_bot_token_here"

  # PostgreSQL connection string
  # Format: postgresql://user:password@host:port/database
  DATABASE_URL: "postgresql://wedding_bot:CHANGE_ME@postgres:5432/wedding_bot"
