apiVersion: v1
kind: Secret
metadata:
  name: wedding-telegram-bot-secret-prod
  namespace: dev-backend-services
  labels:
    app: wedding-telegram-bot
    environment: prod
type: Opaque
stringData:
  # ⚠️ NEVER commit real secrets to git!
  # Copy this file to secret-prod.yaml and fill with real values
  # secret-prod.yaml is in .gitignore

  # Production Bot Token (from @BotFather)
  TELEGRAM_BOT_TOKEN: "your_prod_bot_token_here"

  # PostgreSQL connection string (prod database)
  # Format: postgresql://user:password@host:port/database
  DATABASE_URL: "postgresql://wedding_bot_prod:CHANGE_ME@postgres:5432/wedding_bot_prod"
